#!/bin/bash

###
### SIGpi
###
### pkg_mbelib
###
###  SDRangel dependency
###

case "$1" in 
    remove )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Remove mbelib"
        echo -e "${SIGPI_BANNER_RESET}"
	    
        cd $SIGPI_SOURCE/mbelib/build
        sudo make uninstall
        sudo ldconfig
        rm -rf $SIGPI_SOURCE/mbe
        sed -i /mbelib/d $SIGPI_CONFIG

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   mbelib Removed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    purge )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Purge mbelib"
        echo -e "${SIGPI_BANNER_RESET}"
        
        cd $SIGPI_SOURCE/mbelib/build
        sudo make uninstall
        sudo ldconfig
        rm -rf $SIGPI_SOURCE/mbe
        sed -i /mbelib/d $SIGPI_CONFIG

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   mbelib Purged"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    install )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_COLOR} ##   Install mbelib"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_RESET}"
        
        ### MBElib
        cd $SIGPI_SOURCE
        git clone https://github.com/szechyjs/mbelib.git
        cd mbelib
        git reset --hard 9a04ed5c78176a9965f3d43f7aa1b1f5330e771f
        mkdir build; cd build
        cmake -Wno-dev ..
        make -j4
        sudo make install
        sudo ldconfig
        echo "mbelib" >> $SIGPI_CONFIG 

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   mbelib Installed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    * )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##  ERROR: Unkown action or package"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
esac

#!/bin/bash

###
### SIGPI
###
### pkg_rtl433
###

case "$1" in 
    remove )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Remove RTL_433"
        echo -e "${SIGPI_BANNER_RESET}"

        cd $SIGPI_SOURCE/rtl_433/build
        sudo make uninstall
        sudo ldconfig
        cd $SIGPI_SOURCE
	rm -rf $SIGPI_SOURCE/rtl_433
        sed -i /rtl_433/d $SIGPI_CONFIG
	
	# Remove Menu icon
        sudo rm $SIGPI_DESKTOP_ICONS/rtl_433.png
        # Remove Desktop links
        sudo rm $SIGPI_DESKTOP_FILES/rtl_433.desktop

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   RTL_433 Removed"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    purge )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   Purge RTL_433"
        echo -e "${SIGPI_BANNER_RESET}"

        cd $SIGPI_SOURCE/rtl_433/build
        sudo make uninstall
        sudo ldconfig
        cd $SIGPI_SOURCE
	rm -rf $SIGPI_SOURCE/rtl_433
        sed -i /rtl_433/d $SIGPI_CONFIG

	# Remove Menu icon
        sudo rm $SIGPI_DESKTOP_ICONS/rtl_433.png
        # Remove Desktop links
        sudo rm $SIGPI_DESKTOP_FILES/rtl_433.desktop

        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##   RTL_433 Purged"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    install )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_COLOR} ##   Install RTL_433"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_RESET}"
        ## DEPENDENCIES
        sudo apt-get install -y libtool libusb-1.0-0-dev librtlsdr-dev rtl-sdr libssl-dev

        ## PACKAGE
        cd $SIGPI_SOURCE
        git clone https://github.com/merbanan/rtl_433.git
        cd rtl_433
        mkdir build && cd build
        cmake ..
        make -j4
        sudo make install
        sudo ldconfig
        echo "rtl_433" >> $SIGPI_CONFIG 

	## DESKTOP
	# Add Menu icon
        sudo cp $SIGPI_ICONS/rtl_433.png $DESKTOP_ICONS
        # Add Desktop links
        sudo cp $SIGPI_HOME/desktop/rtl_433.desktop $DESKTOP_FILES
        sudo cp $SIGPI_HOME/desktop/rtl_adsb.desktop $DESKTOP_FILES
        sudo cp $SIGPI_HOME/desktop/rtl_fm.desktop $DESKTOP_FILES
        sudo cp $SIGPI_HOME/desktop/rtl_test.desktop $DESKTOP_FILES
	# Add SigPi Category installed application (already done)
        # Add into menu
        xdg-desktop-menu install --novendor --noupdate $DESKTOP_DIRECTORY/SigPi.directory $DESKTOP_FILES/rtl_433.desktop
        xdg-desktop-menu install --novendor --noupdate $DESKTOP_DIRECTORY/SigPi.directory $DESKTOP_FILES/rtl_adsb.desktop
        xdg-desktop-menu install --novendor --noupdate $DESKTOP_DIRECTORY/SigPi.directory $DESKTOP_FILES/rtl_fm.desktop
        xdg-desktop-menu install --novendor --noupdate $DESKTOP_DIRECTORY/SigPi.directory $DESKTOP_FILES/rtl_test.desktop
	
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_COLOR} ##   RTL_433 Installed"
        echo -e "${SIGPI_BANNER_COLOR} ##"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
    * )
        echo -e "${SIGPI_BANNER_COLOR}"
        echo -e "${SIGPI_BANNER_COLOR} ##  ERROR: Unkown action or package"
        echo -e "${SIGPI_BANNER_RESET}"
        ;;
esac
